<!DOCTYPE html>
<head>
  <meta charset="UTF-8">
  <title>LIST EMPLOYEES</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('header.ejs'); %>
  <div class="container">
    <div class="container-header-search">
      <h2>Employee-name-search</h2>
      <form action="/search" method="post">
        <input type="text" name="searchName">
        <input type="submit" value="Search">
      </form>
    </div>
    <div class="container-header-list">
      <h2>Employees-list</h2>
      <a href="/new" class="new-button">+ Add</a>
    </div>
    <div class="index-table-wrapper">
      <div class="table-head">
        <span class="id-column">ID</span>
        <span class="name-column">name</span>
        <span>department</span>
        </tr>
      </div>
      <ul class="table-body">
        <% items.forEach((item) => { %>
          <li>
            <div class="item-data">
              <span class="id-column"><%= item.id %></span>
              <span class="name-column"><%= item.name %></span>
              <span class="department-column"><%= item.department %></span>
            </div>
            <div class="item-menu">
              <a href="/edit/<%= item.id %>">Edit</a>
            </div>
          </li>
        <% }) %>
      </ul>
    </div>
  </div>
</body>
</html>
