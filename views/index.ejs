<!DOCTYPE html>
<head>
  <meta charset="UTF-8">
  <title>LIST EMPLOYEES</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <header>
    <a href="/" class="header-logo">LIST EMPLOYEES</a>
  </header>
  <div class="container">
    <div class="container-header">
      <h1>Employees-list</h1>
      <a href="/new" class="new-button">+ Add</a>
    </div>
    <table>
      <thead>
        <tr>
          <th class="id-column">ID</th>
          <th>name</th>
          <th>department</th>
        </tr>
      </thead>
      <tbody>
        <% items.forEach((item) => { %>
          <tr>
            <td class="id-column"><%= item.id %></td>
            <td class="name-column" style="padding-left: 15px;"><%= item.name %></td>
            <td class="department-column" style="padding-left: 15px;"><%= item.department %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
 </div>
</body>
</html>
