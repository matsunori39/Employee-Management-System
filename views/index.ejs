<!DOCTYPE html>
<head>
  <meta charset="UTF-8">
  <title>LIST EMPLOYEES</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <header>
    <a href="/" class="header-logo">LIST EMPLOYEES</a>
  </header>
  <div class="container">
    <div class="container-header">
      <h1>Employees-list</h1>
      <a href="/new" class="new-button">+ Add</a>
    </div>
    <div class="index-table-wrapper">
      <div class="table-head">
        <span class="id-column">ID</span>
        <span class="name-column">name</span>
        <span>department</span>
        </tr>
      </div>
      <ul class="table-body">
        <% items.forEach((item) => { %>
          <li>
            <div class="item-data">
              <span class="id-column"><%= item.id %></span>
              <span class="name-column"><%= item.name %></span>
              <span class="department-column"><%= item.department %></span>
            </div>
            <div class="item-menu">
              <a href="/edit/<%= item.id %>">編集</a>
            </div>
          </li>
        <% }) %>
      </ul>
    </div>
  </div>
</body>
</html>
